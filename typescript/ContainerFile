ARG VERSION=5.1.3
FROM docker.io/library/node:22-alpine AS builder
ARG VERSION
WORKDIR /app
RUN npm install typescript-language-server@${VERSION} typescript && \
    npm prune --production

FROM docker.io/library/node:22-alpine
ARG VERSION
LABEL org.opencontainers.image.title="TypeScript LSP" \
      org.opencontainers.image.description="TypeScript Language Server" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/lsp-client/containers" \
      org.opencontainers.image.licenses="MIT"

WORKDIR /app
COPY --from=builder /app/node_modules ./node_modules
ENV PATH="/app/node_modules/.bin:${PATH}"

WORKDIR /workspace
ENTRYPOINT ["typescript-language-server", "--stdio"]
