ARG VERSION=0.14.10

FROM ghcr.io/astral-sh/uv:python3.12-alpine AS builder
ARG VERSION
RUN uv tool install ruff==${VERSION}

FROM gcr.io/distroless/static-debian12
ARG VERSION
LABEL org.opencontainers.image.title="Ruff LSP" \
      org.opencontainers.image.description="Ruff Language Server" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/lsp-client/containers" \
      org.opencontainers.image.licenses="MIT"

COPY --from=builder /root/.local/share/uv/tools/ruff/bin/ruff /usr/local/bin/ruff

WORKDIR /workspace
ENTRYPOINT ["/usr/local/bin/ruff", "server"]
